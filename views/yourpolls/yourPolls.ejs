<style>
  .welcome{
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: row;
  }

  .welcome__image{
    height: 100%;
    width: 65%;
    background-image: url("../2.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }

  .welcome__image--blur{
    width: 100%;
    height: 100%;
    background-color: rgba(50, 101, 212, 0.603);
  }

  .welcome__login{
    width: 35%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  a, .list-group{
    width: 300px;
  }

  @media (max-width: 1024px) {
    .welcome__image{
    width: 50%;
    background-position:right;
  }
  .welcome__login{
    width: 50%;
    
    }
  }

  @media (max-width: 650px) {
    .welcome__image{
    width: 0%;
    background-image: none;
  }
  .welcome__login{
    width: 100%;
    }
  }
</style>

<div class="welcome">
  <div class="welcome__image">
    <div class="welcome__image--blur"></div>
  </div>
  <div class="welcome__login">
<h1 class="mt-4">Your Polls</h1>
<p class="lead mb-3">Welcome <%= user %></p>
            <div class="caption mb-2">Choose Poll to invite users</div>
            <div class="list-group">
              <% polls.forEach(function(polls) { %>
                <form method='get', action='./yourPolls/<%= polls.id %>'>
                <button class="list-group-item list-group-item-action mt-2" aria-current="true">
                  <%= polls.topic %>
                </button>
              </form>
              <% }); %>
            </div>
  <a href="/dashboard" class="btn btn-secondary mt-2">Back</a>
</div>
</div>