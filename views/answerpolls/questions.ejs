<style>
  .welcome{
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: row;
  }

  .welcome__image{
    height: 100%;
    width: 65%;
    background-image: url("/../2.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }

  .welcome__image--blur{
    width: 100%;
    height: 100%;
    background-color: rgba(50, 101, 212, 0.603);
  }

  .welcome__login{
    width: 35%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  button, a, .list-group{
    width: 300px;
  }

  @media (max-width: 1024px) {
    .welcome__image{
    width: 50%;
    background-position:right;
  }
  .welcome__login{
    width: 50%;
    
    }
  }

  @media (max-width: 650px) {
    .welcome__image{
    width: 0%;
    background-image: none;
  }
  .welcome__login{
    width: 100%;
    }
  }
</style>



<div class="welcome">
  <div class="welcome__image">
    <div class="welcome__image--blur"></div>
  </div>
  <div class="welcome__login">

<h1 class="mt-4">Your Polls</h1>
<p class="lead mb-3">Welcome <%= user %></p>

            <div class="caption mb-2">QUESTIONS</div>
            <form action="/answerPoll/saveAnswer/<%= id %>" method="POST">
            <div class="list-group">
              <% polls.forEach(function(quest) { %>
                <% for (var i = 0; i < quest.Questions.length ; i++) { %>
                  <h5 class="mt-2"> <%= i+1 %>. <%= quest.Questions[i] %></h5>
                  <input type="text" name="answer">
                  <% } %>
              <% }); %>
              <button type="submit" class="btn btn-primary btn-block mt-3">Save Answers</button>
            </div>
          </form>
  <a href="../manage" class="btn btn-secondary mt-2">Back</a>
</div>
</div>