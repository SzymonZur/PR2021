                    <input type="text" name="hash">
                    <button type="submit" class="btn btn-primary btn-block mt-3">Check hash</button>
                  </div>
                </form>
            </div>
            <div class="mt-3">
                <a href="/dashboard" class="btn btn-secondary">Back</a>
                </div>
  </div>
